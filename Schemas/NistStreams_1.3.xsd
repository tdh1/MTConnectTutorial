<xs:schema xmlns:xs='http://www.w3.org/2001/XMLSchema' xmlns='urn:nist.gov:NistStreams:1.3' xmlns:x='urn:nist.gov:NistStreams:1.3' targetNamespace='urn:nist.gov:NistStreams:1.3' elementFormDefault='qualified' attributeFormDefault='unqualified' xmlns:vc='http://www.w3.org/2007/XMLSchema-versioning' vc:minVersion='1.1' xmlns:mt='urn:mtconnect.org:MTConnectStreams:1.3'>
  <xs:import namespace='urn:mtconnect.org:MTConnectStreams:1.3' schemaLocation='/schemas/MTConnectStreams_1.3.xsd'/>
  <xs:simpleType name='IntegerValueType'>
    <xs:annotation>
      <xs:documentation>
        An Integer Value
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base='xs:string'>
      <xs:pattern value='[+-]?\d+|UNAVAILABLE'/>
    </xs:restriction>
  </xs:simpleType>
  <xs:complexType name='MotionType'>
    <xs:annotation>
      <xs:documentation>
        Motion state
      </xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:extension base='mt:EventType'/>
    </xs:simpleContent>
  </xs:complexType>
  <xs:element name='Motion' type='MotionType' substitutionGroup='mt:Event'>
    <xs:annotation>
      <xs:documentation>
        Motion state
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:complexType name='ToolGroupType'>
    <xs:annotation>
      <xs:documentation>
        The tool group
      </xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:extension base='mt:EventType'/>
    </xs:simpleContent>
  </xs:complexType>
  <xs:element name='ToolGroup' type='ToolGroupType' substitutionGroup='mt:Event'>
    <xs:annotation>
      <xs:documentation>
        The tool group
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:complexType name='ToolSuffixType'>
    <xs:annotation>
      <xs:documentation>
        The tool suffix
      </xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:extension base='mt:EventType'/>
    </xs:simpleContent>
  </xs:complexType>
  <xs:element name='ToolSuffix' type='ToolSuffixType' substitutionGroup='mt:Event'>
    <xs:annotation>
      <xs:documentation>
        The tool suffix
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:complexType name='UnitType'>
    <xs:annotation>
      <xs:documentation>
        The unit number
      </xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:restriction base='mt:EventType'>
        <xs:pattern value='[+-]?\d+|UNAVAILABLE'/>
      </xs:restriction>
    </xs:simpleContent>
  </xs:complexType>
  <xs:element name='Unit' type='UnitType' substitutionGroup='mt:Event'>
    <xs:annotation>
      <xs:documentation>
        The unit number
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:complexType name='SequenceNumberType'>
    <xs:annotation>
      <xs:documentation>
        The sequence number
      </xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:restriction base='mt:EventType'>
        <xs:pattern value='[+-]?\d+|UNAVAILABLE'/>
      </xs:restriction>
    </xs:simpleContent>
  </xs:complexType>
  <xs:element name='SequenceNumber' type='SequenceNumberType' substitutionGroup='mt:Event'>
    <xs:annotation>
      <xs:documentation>
        The sequence number
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:complexType name='PalletNumberType'>
    <xs:annotation>
      <xs:documentation>
        The pallet number
      </xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:restriction base='mt:EventType'>
        <xs:pattern value='[+-]?\d+|UNAVAILABLE'/>
      </xs:restriction>
    </xs:simpleContent>
  </xs:complexType>
  <xs:element name='PalletNumber' type='PalletNumberType' substitutionGroup='mt:Event'>
    <xs:annotation>
      <xs:documentation>
        The pallet number
      </xs:documentation>
    </xs:annotation>
  </xs:element>
</xs:schema>